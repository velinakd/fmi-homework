import java.lang.Math;

public class NQueens {
	private int n;
	private final double MAX_ITER = Math.sqrt(n);
	
	public NQueens(int n) {
		this.n = n;
	}
	
	public int[][] initializeBoard() {
		int[][] board = new int[n][n];
		int j=0;
		for(int i=0; i<n; i++) {
			j = (int)(Math.random() * n);
			board[i][j] = 1;
		}
		return board;
	}
	
