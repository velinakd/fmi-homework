
public class TicTacToe {
	
	max(A,B, state) {
		if(isFinal) {
			return evaluate(); //who wins and with how many empty slots
			//e.g. first wins, 3 empty = 4; second wins, 4 empty = -1+ -4=-5
		}
		for all moves
			do move
		x=min(A,B,state)
		if(A<x) {
			A=x;
		}
			if(A>+B) {
				return A;
			}
		revert move
	}

	min(A,B, state) {
		if(isFinal) {
			return evaluate();
		}
		for all moves
			do move
		x=max(A,B,state)
		if(B>x) {
			B=x;
		}
			if(A>=B) {
				return B;
			}
		revert move
	}
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
